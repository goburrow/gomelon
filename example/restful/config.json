{
  "server": {
    "type": "DefaultServer",
    "applicationConnectors": [
      {
        "type": "http",
        "addr": ":8080"
      }
    ],
    "adminConnectors": [
      {
        "type": "http",
        "addr": ":8081"
      }
    ],
    "requestLog": {
      "type": "DefaultRequestLog",
      "appenders": [
        {
          "type": "ConsoleAppender"
        }
      ]
    }
  },
  "logging": {
    "level": "DEBUG",
    "loggers": {
      "melon/server": "INFO",
      "melon/configuration": "WARN"
    },
    "appenders": [
      {
        "type": "ConsoleAppender"
      }
    ]
  },
  "metrics": {
    "frequency": "1s"
  }
}
